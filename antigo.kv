#:kivy 1.0.9

<Gerenciador>:
    Entrada:
        name: 'entrada'

<Entrada>:
    MDBoxLayout:
        md_bg_color: 0.2, 0.2, 0.2, 1
        orientation: 'vertical'
        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Início'
                    with_previous: False
                ActionButton:
                    text: 'Opções'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                MDBoxLayout:
                    md_bg_color: 0.2, 0, 0.2, 1
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 60
                    padding: 15
                    MDLabel:
                        text: 'Numero de Cadeiras:'
                        size_hint_x: None
                        width: 150
                    TextInput:  
                        id: nome
                        multiline: False
                        size_hint_x: None
                        width: 50
                Party:
                    id: party
                    md_bg_color: 0.2, 0, 0, 1
                    size_hint_y: None
                    height: 60
                    padding: [0,15]
                    Label:
                        text: 'Nome:'
                        size_hint_x: 0.2
                    TextInput:
                        id: nome
                        multiline: False
                        size_hint_x: 0.4
                    Label: 
                        text: 'Votos:'
                        size_hint_x: 0.2
                    TextInput:
                        id: votos
                        multiline: False
                        size_hint_x: 0.2

                        

