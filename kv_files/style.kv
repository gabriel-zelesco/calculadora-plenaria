<-Button1@Button>
    canvas:
        Color:
            rgba: [1, 0, 0, 1] if self.state == 'normal' else [0, 0, 1, 1]
        Rectangle:
            pos: self.pos
            size: self.size


<ActionButton>:
    font_size: '18sp'




##########  RESULTADO  ##########
<BoxSumario>:
    padding: '10sp'
    spacing: '30sp'
    size_hint_y: None
    height: self.minimum_height
    
<BoxResultado>:
    padding: '10sp'
    spacing: '20sp'
    size_hint_y: None
    height: self.minimum_height

<RoundReport>:
    padding: '10sp'
    spacing: '20sp'
    size_hint_y: None
    height: self.minimum_height
