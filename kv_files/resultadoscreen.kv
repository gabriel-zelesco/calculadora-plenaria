#:import Factory kivy.factory.Factory


<ResultadoScreen>:
    name: 'resultado'
    BoxLayout:
        orientation: 'vertical'
        NavBar:
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                BoxResultados:
                    id: box_resultados




<BoxResultados@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: 20



<BoxSumario>:
    cols: 2
    size_hint_y: None
    height: 50


<BoxResultado>:
    cols: 5
    size_hint_y: None
    height: 50
    Label:
        text: 'Nome'
    Label:
        text: 'Votos'
    Label:
        text: 'QP'
    Label:
        text: 'Quebras'
    Label:
        text: 'Total'


<BoxReport>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height


<RoundWinner>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 50

<RoundReport>:
    cols: 5
    size_hint_y: None
    height: 50
