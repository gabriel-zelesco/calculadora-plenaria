#:kivy 1.0.9
#:import Factory kivy.factory.Factory
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import Label kivy.uix.label.Label


<Manager>:
    transition: NoTransition()
    InicioScreen:
        name: 'inicio'
    CalculadoraScreen:
        name: 'calculadora'
    ResultadoScreen:
        name: 'resultado'
    OpcoesScreen:
        name: 'opcoes'
    DummyScreen:
        name: 'dummy'

<DummyScreen@Screen>: # dummy screen to force screenmanager to update
    on_enter:
        self.manager.current = 'calculadora'  # change screen after kv is initialized



<NavBar@ActionBar>:
    pos_hint: {'top': 1}
    ActionView:
        ActionPrevious:
            title: 'Inicio'
            on_release: app.root.current = 'inicio'
        ActionButton:
            text: 'Calculadora'
            on_release: app.root.current = 'calculadora'
        ActionSeparator:
            width: 1
        ActionButton:
            text: 'Resultado'
            on_release: app.root.current = 'resultado'
        ActionSeparator:
            width: 1
        ActionButton:
            text: 'Opcoes'
            on_release: app.root.current = 'opcoes'
        ActionSeparator:
            width: 1
        ActionButton:
            text: 'Sair'
            on_release: app.stop()


<InicioScreen>:
    name: 'inicio'
    BoxLayout:
        orientation: 'vertical'
        NavBar:
        Label:
            text: 'Inicio'


<CalculadoraScreen>:
    name: 'calculadora'
    BoxLayout:
        orientation: 'vertical'
        NavBar:
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                Widget:
                    size_hint_y: None
                    height: 30
                BoxNplaces:
                    id: box_nplaces
                BoxChapas:
                    id: box_chapas
                BoxAbstencao:
                BoxNovaChapa:
                    id: box_nova_chapa
                Widget:
                    size_hint_y: None
                    Button:
                        height: 50
                        text: 'Calcular'
                        on_release: 
                            app.root.current = 'resultado'




<ResultadoScreen>:
    name: 'resultado'
    BoxLayout:
        orientation: 'vertical'
        NavBar:
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                Widget:
                    size_hint_y: None
                    height: 30
                BoxResultados:
                    id: box_resultados



<OpcoesScreen>:        
    name: 'opcoes'
    BoxLayout:
        orientation: 'vertical'
        NavBar:
        Label:
            text: 'Opcoes'

<BoxChapas@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: 5


<ChapaInscrita>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 30
    Label:
        id: nome_chapa
    Label:
        id: votos_chapa
    Button:
        text: 'Remover'
        on_release: root.remove_chapa()

<BoxNplaces>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    BoxInputCadeiras:
        id: input_nplaces

<BoxInputCadeiras>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 50
    Label:
        text: 'Cadeiras:'
    TextInput:
        id: n_places
        hint_text: 'Nº de cadeiras'
        multiline: False
        size_hint_x: 0.5
    Button:
        text: 'Adicionar'
        on_release: 
            root.parent.add_n_places(n_places.text)


<BoxCadeiras>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 30
    Label:
        text: 'Cadeiras:'
    Label:
        id: n_places
    Button:
        text: 'Editar'
        on_release: 
            root.parent.edit_n_places()
            
                
<BoxAbstencao@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        Label:
            text: 'Abstenções:'
        TextInput:
            id: abstencao
            hint_text: 'Nº abstenções'
            multiline: False
            size_hint_x: 0.5
        Button:
            text: 'Adicionar'
            on_release: 
                Factory.CalculadoraScreen().add_chapa('abstention' ,abstencao.text)
                app.root.current = 'dummy'
<BoxNovaChapa>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        TextInput:
            id: nome_chapa
            hint_text: 'Nome'
            multiline: False
            size_hint_x: 0.5
        TextInput:
            id: votos_chapa
            hint_text: 'Votos'
            multiline: False
            size_hint_x: 0.5
        Button:
            text: 'Adicionar'
            on_release: 
                Factory.CalculadoraScreen().add_chapa(nome_chapa.text ,votos_chapa.text)
                app.root.current = 'dummy'


<BoxResultados@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: 20
    BoxResultadoSimples:
        id: box_resultado_simples
    BoxResultadoCompleto:
        id: box_resultado_completo

<BoxResultadoSimples>:
    cols: 2
    size_hint_y: None
    height: self.minimum_height
    spacing: 20
    Label:
        text: 'Resultado Simples'
    Widget:

<BoxResultadoCompleto>:
    cols: 4
    size_hint_y: None
    height: self.minimum_height
    spacing: 20
    Label:
        text: 'Resultado Completo'
    Label:
        text: 'Quociente'
    Label:
        text: 'Empate'
    Label:
        text: 'Limite'